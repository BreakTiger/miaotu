page {
  background: #f5f5f5;
}

.top-content {
  width: 100%;
  margin-bottom: 8rpx;
}

.top-content>view {
  width: 700rpx;
}

.icon {
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
}

.upImg {
  padding-bottom: 20rpx;
}

.add {
  width: 206rpx;
  height: 206rpx;
  margin-right: 25rpx;
  margin-top: 25rpx;
  position: relative;
}

.order-content {
  width: 100%;
  margin-bottom: 400rpx;
}

.order-content>view {
  width: 670rpx;
}

.title {
  padding: 20rpx 0;
}

.order-goods {
  padding: 20rpx 0;
}

.order-img {
  width: 140rpx;
  height: 140rpx;
}

.order-goods>view {
  width: 495rpx;
}

.line {
  height: 88rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.btn {
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(270deg, rgba(65, 214, 248, 1) 0%, rgba(33, 176, 240, 1) 100%);
  position: fixed;
  bottom: 40rpx;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -10rpx;
  right: -20rpx;
  z-index: 10;
  border-radius: 50%;
}
