page {
  background: #f5f5f5;
}

.top-line-nav {
  width: 100%;
  height: 108rpx;
}

.top-line-nav>text {
  width: calc(100% / 5);
}

.linebottoms {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  position: relative;
}

.linebottoms::after {
  content: '';
  width: 72rpx;
  height: 8rpx;
  background: #ffd304;
  position: absolute;
  bottom: 0;
  left: calc((100% - 72rpx) / 2);
  opacity: 0.7;
}

.list-content {
  width: 100%;
  height: auto;
}

.list-item{
  width: 710rpx;
  border-radius: 16rpx;
}