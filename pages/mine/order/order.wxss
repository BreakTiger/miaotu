page {
  background: #f5f5f5;
}

.top-line-nav {
  width: 100%;
  height: 108rpx;
  position: fixed;
  top: 0rpx;
  z-index: 10;
}

.top-line-nav>text {
  width: calc(100% / 6);
}

.linebottoms {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  position: relative;
}

.linebottoms::after {
  content: '';
  width: 72rpx;
  height: 8rpx;
  background: #ffd304;
  position: absolute;
  bottom: 0;
  left: calc((100% - 72rpx) / 2);
  opacity: 0.7;
}

.list-content {
  width: 100%;
  height: auto;
}

.list-item {
  width: 710rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.line_one {
  width: 100%;
  padding: 30rpx 0;
}

.line_one>view {
  margin-left: 20rpx;
}

.line_one>view>text {
  margin: 0 20rpx;
}

.line_one>text {
  margin-right: 20rpx;
}

.shop {
  width: 28rpx;
  height: 24rpx;
}

.go {
  width: 12rpx;
  height: 24rpx;
}

.goods {
  width: 100%;
  padding-top: 20rpx;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin: 0 20rpx;
}

.goods-info {
  width: 480rpx;
  height: 160rpx;
}

.goods-info view {
  width: 100%;
}

.price {
  width: 92%;
  height: 60rpx;
  justify-content: flex-end;
}

.btn-line {
  width: 92%;
  padding: 16rpx 0;
  justify-content: flex-end;
  position: relative;
}

.btn_one {
  width: 148rpx !important;
  height: 56rpx !important;
  line-height: 56rpx;
  border: 2rpx solid rgba(31, 175, 241, 1);
  margin-left: 20rpx;
}

.btn_two {
  width: 148rpx !important;
  height: 56rpx !important;
  line-height: 56rpx;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
  margin-left: 20rpx;
}

.share-btn {
  width: 148rpx !important;
  min-height: 56rpx !important;
  font-size: 24rpx !important;
  margin: 0rpx !important;
  padding: 0rpx !important;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
  line-height: 56rpx;
  margin-left: 20rpx !important;
}

.contact-btn {
  width: 148rpx !important;
  height: 56rpx !important;
  min-height: 0rpx !important;
  padding: 0;
  border: none !important;
  position: absolute;
  right: 170rpx;
  z-index: 10;
}
