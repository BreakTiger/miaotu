page {
  background: #f5f5f5;
}

.container>view>view, textarea {
  width: 700rpx;
}

.goods-line {
  padding: 20rpx 0;
}

.goods-img {
  width: 140rpx;
  height: 140rpx;
}

.goods-name {
  width: 538rpx;
  height: 140rpx;
}

.picture-content {
  padding-bottom: 15rpx;
}

.add {
  width: 206rpx;
  height: 206rpx;
  position: relative;
  margin-right: 25rpx;
  margin-top: 25rpx;
}

.comments {
  height: 400rpx;
  margin-bottom: 20rpx;
}

.send {
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(270deg, rgba(65, 214, 248, 1) 0%, rgba(33, 176, 240, 1) 100%);
  margin-top: 40rpx;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -10rpx;
  right: -20rpx;
  z-index: 10;
  border-radius: 50%;
}
