page {
  background: #f5f5f5;
}

.line {
  width: 100%;
}

.line>view {
  width: 670rpx;
  height: 108rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.header {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.icon {
  width: 15rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.introduce {
  width: 100%;
  height: 220rpx;
  margin: 40rpx 0;
}

.picture {
  width: 206rpx;
  height: 206rpx;
  margin: 20rpx 0;
  position: relative;
}

.p_img {
  width: 100%;
  height: 100%;
}

.close {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: black;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}

.confirm {
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(270deg, rgba(65, 214, 248, 1) 0%, rgba(33, 176, 240, 1) 100%);
  margin: 100rpx 0;
}
