page {
  background: #f5f5f5;
}

.switch {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0rpx;
  z-index: 100;
}

.switch>view {
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}

.switch>view:first-child {
  position: relative;
}

.switch>view:first-child::after {
  content: '';
  position: absolute;
  top: 10rpx;
  right: 0rpx;
  width: 2rpx;
  height: 80rpx;
  background: #f5f5f5;
}

.empty {
  width: 322rpx;
  height: 272rpx;
  margin-top: 100rpx;
  margin-bottom: 40rpx;
}

.list {
  width: 100%;
}

.list-item {
  width: 95%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item>image {
  width: 180rpx;
  height: 180rpx;
}

.list-item>view {
  width: 72%;
  height: 180rpx;
}
