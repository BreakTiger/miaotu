/* 瀑布流 */

.list-content {
  width: 710rpx;
  margin: auto;
  margin-top: 20rpx;
}

.left-col, .right-col {
  width: 346rpx;
  display: inline-block;
}

.right-col {
  float: right;
}

.list-item {
  width: 346rpx;
  height: 488rpx;
  margin-bottom: 20rpx;
}

.list-item>image {
  width: 346rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.list-titles {
  width: 304rpx;
}

.list-img {
  width: 346rpx;
  height: 344rpx;
  margin-bottom: 20rpx;
}

.window {
  width: 540rpx;
  height: 510rpx;
  border-radius: 24rpx;
}

.window>image {
  width: 136rpx;
  height: 118rpx;
}

.window>view {
  width: 396rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
}
