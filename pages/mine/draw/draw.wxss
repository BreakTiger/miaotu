page {
  background: #1faff1;
}

.container {
  position: relative;
}

.title_one {
  width: 478rpx;
  height: 204rpx;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.btn {
  width: 146rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(0, 0, 0, 0.2);
}

.prize{
  position: absolute;
  top: 44rpx;
  right: 20rpx;
}

.rule {
  position: absolute;
  top: 115rpx;
  right: 20rpx;
}

.rotary {
  width: 670rpx;
  height: 670rpx;
  position: relative;
  margin-bottom: 44rpx;
}

.r_bk {
  width: 100%;
  height: 100%;
}

.rotary-inside {
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  top: 30rpx;
  left: 35rpx;
}

.rotary-inside>image {
  width: 100%;
  height: 100%;
}

.point {
  width: 68rpx;
  height: 88rpx;
  position: absolute;
  top: -35rpx;
  left: calc((100% - 68rpx) /2);
  z-index: 10;
}

.r_btn {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: calc((100% - 140rpx)/2);
  left: calc((100% - 140rpx)/2);
}

.rotary-item {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 0rpx;
  left: 148rpx;
  transform-origin: 50% 100%;
}

.rotary-item>text {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.rotary-item>image {
  width: 76rpx;
  height: 76rpx;
}

.invite {
  margin: 0rpx;
  padding: 0rpx;
  width: 600rpx !important;
  height: 88rpx !important;
  font-size: 32rpx !important;
  line-height: 88rpx;
  background: linear-gradient(180deg, rgba(175, 31, 241, 1) 0%, rgba(31, 56, 241, 1) 100%);
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(31, 175, 241, 1);
  margin-top: 14rpx;
  margin-bottom: 54rpx;
}

