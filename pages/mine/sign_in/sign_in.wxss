page {
  background: #f5f5f5;
}

.top-line {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  position: relative;
}

.top-bk {
  width: 140%;
  height: 100%;
  border-radius: 100% 100% 100% 100%/0 0 50% 50%;
}

.top-content {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  z-index: 10;
}

.type {
  width: 45%;
  margin-top: 40rpx;
  margin-bottom: 28rpx;
}

.ty_icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.integral {
  width: 146rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 44rpx;
  right: 22rpx;
}

.f72 {
  font-size: 72rpx;
}

.sign-btn {
  width: 240rpx;
  height: 76rpx;
  line-height-step: 76rpx;
  background: rgba(255, 211, 4, 1);
  color: #874f00;
  border: 4rpx solid rgba(255, 225, 100, 1);
}

.title-line {
  width: 670rpx;
  height: 108rpx;
}

.title-line>text {
  position: relative;
}

.title-line>text::after {
  position: absolute;
  bottom: 0rpx;
  left: 30rpx;
  content: '';
  width: 72rpx;
  height: 8rpx;
  background: rgba(255, 211, 4, 0.7);
}

.calendar {
  width: 100%;
}

.nowDates {
  width: 670rpx;
  height: 88rpx;
}

.controls {
  width: 120rpx;
}

.controls>image {
  width: 22rpx;
  height: 12rpx;
}

.weeks {
  width: 100%;
}

.weeks>view {
  width: 72rpx;
  height: 68rpx;
}

.calendar-content {
  width: 100%;
}

.calendar-content-row {
  width: 100%;
  height: 68rpx;
  margin: 10rpx 0;
}

.calendar-content-col {
  width: 36px;
  height: 100%;
}

.calendar-list-item {
  width: 100%;
  height: 100%;
  position: relative;
}
