page {
  background: #f5f5f5;
}

.top-content {
  width: 100%;
  height: 418rpx;
  border-radius: 100% 100% 100% 100%/0 0 20% 20%;
  overflow: hidden;
  position: relative;
  margin-bottom: 20rpx;
}

.top-content>view {
  z-index: 10;
}

.bk {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.user-info {
  width: 710rpx;
  height: 336rpx;
}

.header {
  width: 128rpx;
  height: 128rpx;
  border: 4rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
  background: black;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.username {
  margin-bottom: 20rpx;
}

.username>image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.three-info {
  width: 558rpx;
}

.three-info>view:nth-child(2) {
  border-left: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
}

.three-info-item {
  width: 186rpx;
}

.card-content {
  width: 710rpx;
  height: 88rpx;
  position: relative;
}

.card-content>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.level-name {
  color: #ffd304;
  margin-left: 36rpx;
  z-index: 10;
}

.up_member {
  width: 114rpx;
  height: 34rpx;
  line-height: 34rpx;
  background: rgba(255, 211, 4, 1);
  margin-right: 28rpx;
  z-index: 10;
}

.nav-content {
  width: 710rpx;
  height: 156rpx;
  margin-bottom: 20rpx;
}

.icons {
  width: 88rpx;
  height: 88rpx;
}

.travel {
  width: 710rpx;
  height: 128rpx;
  margin-bottom: 36rpx;
}

.travel>text {
  margin-left: 20rpx;
}

.travel>view {
  width: 520rpx;
  height: 88rpx;
  margin-right: 20rpx;
}

.travel-image>image {
  width: 88rpx;
  height: 88rpx;
  margin-left: 8rpx;
}

.travel>view>image {
  width: 24rpx;
  height: 24rpx;
}

.guess {
  width: 100%;
}

.guess>text {
  margin-left: 24rpx;
  position: relative;
}

.guess>text::after {
  content: '';
  width: 72rpx;
  height: 8rpx;
  background: rgba(255, 211, 4, 0.7);
  position: absolute;
  bottom: 0rpx;
  left: 28rpx;
}

/* 瀑布流 */

.list-content {
  width: 710rpx;
  margin: auto;
  margin-top: 20rpx;
}

.left-col, .right-col {
  width: 346rpx;
  display: inline-block;
}

.right-col {
  float: right;
}

.list-item {
  width: 346rpx;
  height: 488rpx;
  margin-bottom: 20rpx;
}

.list-item>image {
  width: 346rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.list-titles {
  width: 304rpx;
}

.list-img {
  width: 346rpx;
  height: 344rpx;
  margin-bottom: 20rpx;
}

.send-btn {
  width: 128rpx;
  height: 88rpx;
  position: fixed;
  bottom: 60rpx;
  left: calc((100% - 128rpx)/2);
  z-index: 10;
}

.scan-line {
  width: 710rpx;
  height: 100rpx;
  margin-bottom: 36rpx;
}

.scan-line>text {
  margin-left: 20rpx;
}

.scan-line>image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
