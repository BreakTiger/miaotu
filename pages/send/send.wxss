.title-line {
  width: 670rpx;
  margin-top: 35rpx;
}

/* 图片 */

.picture-content, .viedo-content {
  width: 680rpx;
  margin-top: 35rpx;
}

.picture-content>view, .viedo-content>view {
  width: 206rpx;
  height: 206rpx;
  margin-bottom: 45rpx;
  margin-right: 20rpx;
  position: relative;
}

.picture, .videos {
  width: 100%;
  height: 100%;
}

.close {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  top: -20rpx;
  right: -15rpx;
  z-index: 10rpx;
}

/* 上传按钮 */

.add-box {
  width: 206rpx;
  height: 206rpx;
  margin-left: 10rpx;
}

/* 正文 */

.article {
  width: 690rpx;
  margin-top: 40rpx;
}

/* 定位 */

.localtion {
  width: 670rpx;
  padding: 28rpx 0;
  margin-bottom: 200rpx;
}

.localtion>image {
  width: 24rpx;
  height: 32rpx;
  margin-right: 24rpx;
}

/* 发表 */

.sends {
  width: 348rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
  position: fixed;
  right: 20rpx;
  bottom: 16rpx;
  z-index: 10;
}
