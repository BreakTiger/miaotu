page {
  background: #f5f5f5;
}

.top-line {
  width: 100%;
  height: 108rpx;
  position: fixed;
  top: 0;
  z-index: 10;
}

.top-line>view:first-child {
  width: 500rpx;
  margin-left: 20rpx;
}

.search {
  width: 182rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.search>input {
  width: 100%;
  height: 100%;
}

.banner {
  width: 710rpx;
  height: 220rpx;
  margin: 20rpx auto;
}

.sw_img {
  width: 100%;
  height: 100%;
}

.lines {
  position: relative;
}

.lines::after {
  content: '';
  width: 72rpx;
  height: 8rpx;
  background: rgba(255, 211, 4, 0.7);
  position: absolute;
  bottom: 0;
  left: 28rpx;
}

/* 瀑布流 */

.list-content {
  width: 710rpx;
  margin: auto;
}

.left-col, .right-col {
  width: 346rpx;
  display: inline-block;
}

.right-col {
  float: right;
}

.list-item {
  width: 346rpx;
  height: 488rpx;
}

.list-item>image {
  width: 346rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.list-titles {
  width: 304rpx;
  margin-top: 10rpx;
  margin-bottom: 26rpx;
}

.users>image {
  width: 40rpx;
  height: 40rpx;
  background: black;
  border-radius: 50%;
  margin-right: 8rpx;
}

.likes>image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.list-img {
  width: 346rpx;
  height: 344rpx;
  margin-bottom: 20rpx;
}

.list-img>image {
  width: 100%;
  height: 100%;
}

/* 悬浮按钮 */

.send-btn {
  width: 128rpx;
  height: 88rpx;
  position: fixed;
  bottom: 60rpx;
  left: calc((100% - 128rpx)/2);
  z-index: 10;
}
