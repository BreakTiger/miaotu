page {
  background: #ff3f53;
}

.top-line {
  width: 100%;
  height: 108rpx;
  position: fixed;
  top: 0rpx;
  z-index: 10;
}

.top-line>text {
  width: 120rpx;
  text-align: center;
}

.choice {
  position: relative;
  color: #000;
  font-weight: bold;
