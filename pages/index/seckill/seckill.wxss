page {
  background: #ff3f53;
}

.top-line {
  width: 100%;
  height: 108rpx;
  position: fixed;
  top: 0;
  z-index: 10;
}

.top-line>image {
  width: 76rpx;
  height: 66rpx;
  background: black;
  margin-left: 20rpx;
  margin-right: 42rpx;
}

/* 滚动条 */

.scroll-content {
  width: 612rpx;
  height: 66rpx;
  overflow: hidden;
}

.scroll-list {
  height: 100%;
  white-space: nowrap;
}

.scroll-list-item {
  display: inline-block;
  width: 125rpx;
  height: 100%;
  text-align: center;
}

.scroll-list-item>text {
  display: block;
}

.linebottoms {
  position: relative;
}

.linebottoms::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25rpx;
  width: 72rpx;
  height: 8rpx;
  background: #ffd304;
  opacity: 0.7;
}

.list-content {
  width: 100%;
  height: auto;
  margin-top: 108rpx;
  padding-bottom: 20rpx;
}

.list-content-item {
  width: 710rpx;
  height: 270rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.list-content-item>image {
  width: 230rpx;
  height: 230rpx;
  border-radius: 12rpx;
  margin: 0 20rpx;
}

.list-content-item-info {
  width: 420rpx;
  height: 230rpx;
  position: relative;
  margin-right: 20rpx;
}

.title-line {
  width: 100%;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.c-45 {
  color: #494445;
}

.labers {
  width: 96rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: rgba(255, 63, 83, 0.1);
  border-radius: 4rpx;
  margin-bottom: 70rpx;
}

.state {
  position: absolute;
  bottom: 0;
  right: 0;
}

.state>text {
  margin-bottom: 10rpx;
}

.state>view {
  width: 148rpx;
  height: 80rpx;
  background: rgba(255, 63, 83, 1);
}

.state>view>view {
  width: 100%;
}

.state>view>view>progress {
  width: 80rpx;
  height: 8rpx;
}
