page {
  background: #f5f5f5;
}

.top-box {
  width: 100%;
  height: 310rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 10rpx;
}

.top-bk {
  width: 140%;
  height: 280rpx;
  background: linear-gradient(360deg, #41d8f9 0%, #1faff1 100%);
  border-radius: 100% 100% 100% 100% / 0 0 50% 50%;
}

.top-box>swiper {
  width: 710rpx;
  height: 280rpx;
  position: absolute;
  top: 20rpx;
}

.sw-img {
  width: 100%;
  height: 100%;
}

.list-content {
  width: 100%;
}

.list-item {
  width: 710rpx;
  height: 270rpx;
  margin-bottom: 16rpx;
}

.list-item>image {
  width: 230rpx;
  height: 230rpx;
  margin: 0 20rpx;
}

.list-item-info {
  width: 420rpx;
  height: 230rpx;
}

.title {
  width: 100%;
  height: 80rpx;
  margin-bottom: 60rpx;
}

.laber-line {
  width: 100%;
  margin-bottom: 30rpx;
}

.laber-line>view {
  margin-right: 20rpx;
  width: 96rpx;
  height: 32rpx;
  line-height: 32rpx;
}

.laber-line>text:last-child {
  margin: 0;
}

.c-53 {
  color: #ff3f53;
}

.b-53 {
  background: rgba(255, 63, 83, 0.1);
}

.last-line {
  width: 100%;
}

.c-CC {
  color: #ccc;
}

.join {
  width: 100rpx;
  height: 28rpx;
  position: relative;
}

.join>image {
  width: 28rpx;
  height: 100%;
  border-radius: 50%;
  position: absolute;
}
