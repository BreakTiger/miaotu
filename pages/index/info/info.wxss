page {
  background: #f5f5f5;
}

.line, .line>view>view {
  width: 100%;
}

.header {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
}

.point {
  width: 20rpx !important;
  height: 20rpx !important;
  border-radius: 50%;
  background: red;
  position: absolute;
  top: 30rpx;
  left: 118rpx;
}

.line>view {
  width: 582rpx;
  height: 148rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.shad {
  width: 640rpx;
  position: relative;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #666;
}

.close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  z-index: 100;
}

.shad>text {
  padding: 30rpx 0;
  width: 80%;
}
