page {
  background: #f5f5f5;
}

.top-line {
  width: 100%;
  height: 260rpx;
  overflow: hidden;
  position: relative;
}

.top-bk {
  width: 140%;
  height: 100%;
  background: rgba(255, 211, 4, 1);
  border-radius: 100% 100% 100% 100%/0 0 50% 50%;
}

.flow {
  width: 550rpx;
  position: absolute;
  top: 25rpx;
  z-index: 10;
}

.flow-item {
  width: 180rpx;
}

.flow-item-img {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 242, 183, 1);
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.flow-item-img>image {
  width: 62rpx;
  height: 62rpx;
  background: black;
}

.lines {
  width: 370rpx;
  border: 4rpx dashed rgba(255, 255, 255, 0.5);
  position: absolute;
  top: 65rpx;
}

.top-line>text {
  color: #8e7500;
  position: absolute;
  top: 180rpx;
}

.top-line>image {
  width: 16rpx;
  height: 6rpx;
  background: black;
  position: absolute;
  top: 230rpx;
}

.list-content {
  width: 100%;
  height: auto;
  padding-bottom: 20rpx;
}

.list-item {
  width: 346rpx;
  height: 588rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.list-item>image {
  width: 346rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.list-item-title {
  width: 304rpx;
  height: 60rpx;
  margin-top: 10rpx;
  margin-bottom: 24rpx;
}

.price-line {
  width: 304rpx;
  margin-bottom: 22rpx;
}

.freeget {
  line-height: 80rpx;
  width: 304rpx;
  height: 80rpx;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
  border-radius: 12rpx;
}
