page {
  background: #f5f5f5;
}

.shop-line {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 100rpx;
}

.shop-line>image {
  width: 88rpx;
  height: 88rpx;
  background: black;
}

.shop-info {
  width: 350rpx;
  height: 88rpx;
}

.icons>image {
  width: 20rpx;
  height: 16rpx;
  background: black;
  margin-right: 8rpx;
}

.Focus {
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
}

.linebottoms {
  color: #333;
  margin: 36rpx 0 36rpx 24rpx;
  font-size: 36rpx;
  position: relative;
}

.linebottoms::after {
  content: "";
  position: absolute;
  left: 35rpx;
  bottom: 0rpx;
  width: 72rpx;
  height: 8rpx;
  background: rgba(255, 211, 4, 0.7);
}

.list-content {
  width: 100%;
  padding-bottom: 20rpx;
}

.list-item {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 346rpx;
  height: 488rpx;
}

.list-item>image {
  width: 346rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.list-titles {
  width: 304rpx;
  margin-top: 10rpx;
  margin-bottom: 26rpx;
}

.list-img {
  width: 346rpx;
  height: 344rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.list-img>image {
  width: 100%;
  height: 100%;
}

