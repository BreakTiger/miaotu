page {
  background: #f5f5f5;
}

/* 出发地 + 套餐类型 */

.depart, .type {
  width: 100%;
  padding-top: 36rpx;
  padding-bottom: 16rpx;
  margin-bottom: 8rpx;
}

.depart>text, .type>text, .departure>text, .buyNums>text {
  margin-left: 40rpx;
}

.depart-list {
  width: 700rpx;
  margin-left: 20rpx;
  padding: 20rpx 0;
}

.depart-list>text {
  width: 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
}

.type-list {
  width: 710rpx;
  margin-left: 20rpx;
  padding: 20rpx 0;
}

.type-list>text {
  padding: 16rpx 14rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
}

.depart-list-item, .type-list-item {
  border-color: #1faff1 !important;
  color: #1faff1;
}

/* 日历 */

.departure {
  width: 100%;
  margin-bottom: 8rpx;
}

.departure>text {
  padding-top: 36rpx;
  padding-bottom: 16rpx;
}

.nowDates {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
}

.controls {
  width: 120rpx;
  margin-right: 40rpx;
}

.controls>image {
  width: 22rpx;
  height: 12rpx;
}

.weeks {
  width: 100%;
}

.weeks>view {
  width: 72rpx;
  height: 68rpx;
}

.calendar-content {
  width: 100%;
}

.calendar-content-row {
  width: 100%;
  height: 68rpx;
  margin: 10rpx 0;
}

.calendar-content-col {
  width: 36px;
  height: 100%;
}

.calendar-list-item {
  width: 100%;
  height: 100%;
}

/* 购买数量 */

.buyNums {
  width: 100%;
  margin-bottom: 278rpx;
}

.buyNums>text {
  padding-top: 36rpx;
  padding-bottom: 16rpx;
}

.line {
  width: 100%;
  padding: 20rpx 0;
}

.line>text {
  margin-left: 40rpx;
}

.number-control {
  width: 164rpx;
  height: 48rpx;
  margin-right: 40rpx;
}

.number-control text {
  width: 48rpx;
  height: 100%;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.number-control input {
  width: 48rpx;
  height: 100%;
}

/* 底部栏 */

.bottom-line {
  width: 100%;
  padding: 16rpx 0;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.bottom-line>view:first-child {
  margin-left: 40rpx;
}

.bottom-line>view:last-child {
  margin-right: 40rpx;
}

.sure {
  width: 300rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: linear-gradient(270deg, rgba(65, 216, 249, 1) 0%, rgba(31, 175, 241, 1) 100%);
}
