page {
  background: #f5f5f5;
}

.depart, .type {
  width: 100%;
  padding-top: 36rpx;
  padding-bottom: 16rpx;
  margin-bottom: 8rpx;
}

.depart>text, .type>text, .departure>text {
  margin-left: 40rpx;
}

.depart-list {
  width: 700rpx;
  margin-left: 20rpx;
  padding: 20rpx 0;
}

.depart-list>text {
  width: 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
}

.type-list {
  width: 710rpx;
  margin-left: 20rpx;
  padding: 20rpx 0;
}

.type-list>text {
  padding: 16rpx 14rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(204, 204, 204, 1);
}

.depart-list-item, .type-list-item {
  border-color: #1faff1 !important;
  color: #1faff1;
}

.departure {
  width: 100%;
  margin-bottom: 8rpx;
}

.departure>text {
  padding-top: 36rpx;
  padding-bottom: 16rpx;
}

.nowDates {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
}

.controls {
  width: 120rpx;
  margin-right: 40rpx;
}

.controls>image {
  width: 12rpx;
  height: 12rpx;
  background: black;
}

.calendar-content {
  width: 100%;
}

.weeks {
  width: 100%;
}

.weeks>view {
  width: 72rpx;
  height: 68rpx;
}

.weeks>view:first-child {
  margin-left: 40rpx;
}

.weeks>view:last-child {
  margin-right: 40rpx;
}

.days-content {
  width: 100%;
}
