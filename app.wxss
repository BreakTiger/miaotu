/* 全局 */

page {
  height: 100%;
}

.container {
  width: 750rpx;
  height: auto;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  overflow: auto;
}

/* 弹性 */

.flex {
  display: flex;
}

.col {
  flex-direction: column;
}

.fl-w {
  flex-wrap: wrap;
}

.fl-align {
  align-items: center;
}

.fl-jc {
  justify-content: center;
}

.fl-jsb {
  justify-content: space-between;
}

.fl-jsa {
  justify-content: space-around;
}

.fl-jse {
  justify-content: space-evenly;
}

.fl-jsd {
  justify-content: flex-end;
}

/* 文字大小 */

.f18 {
  font-size: 18rpx;
}

.f20 {
  font-size: 20rpx;
}

.f22 {
  font-size: 22rpx;
}

.f24 {
  font-size: 24rpx;
}

.f28 {
  font-size: 28rpx;
}

.f32 {
  font-size: 32rpx;
}

.f40 {
  font-size: 40rpx;
}

/* 文字颜色 */

.c-F1 {
  color: #1faff1;
}

.c-ff {
  color: #fff;
}

.c-C1 {
  color: #c1c1c1;
}

.c-38 {
  color: #fe2438;
}

.c-66 {
  color: #666;
}

.c-00 {
  color: #000;
}

/* 文字粗细 */

.f-w3 {
  font-weight: 300;
}

.f-w5 {
  font-weight: 500;
}

.f-w6 {
  font-weight: 600;
}

.f-wb {
  font-weight: bold;
}

/* 背景大小 */

.b-ff {
  background: #fff;
}

.b-F1 {
  background: #1faff1;
}

.b-2E {
  background: #fb2e2e;
}

.b-F5 {
  background: #f5f5f5;
}

/* 圆角 */

.b_r200 {
  border-radius: 200rpx;
}

.b_r12 {
  border-radius: 12rpx;
}

.b_r16 {
  border-radius: 16rpx;
}

/* 超出省略 */

.climp1 {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.climp2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.climp3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 下边线 */

.linebottom {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  position: relative;
}

.linebottom::after {
  content: '';
  width: 72rpx;
  height: 8rpx;
  background: #ffd304;
  position: absolute;
  bottom: 0;
  left: 0;
  opacity: 0.7;
}

.t-ac {
  text-align: center;
}

.cover {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: rgba(0, 0, 0, 0.8);
}
